@import 'arkui'

input
button
select
textarea
  vertical-align top
  border-radius 3px

// button
.btn
  display inline-block
  font-weight bold
  color #666
  padding 5px 12px
  text-transform uppercase
  border 1px solid rgba(0,0,0,0.1)
  text-align center
  vertical-align middle
  white-space nowrap
  text-shadow 0 1px 0 #fff
  border-radius 2px
  transition border-color .218s ease
  background linear-gradient(top, 40% whiteSmoke, 70% #f1f1f1)
  &:hover
    color #333
    border-color #939393
    cursor pointer
    box-shadow 0 1px 1px rgba(0,0,0,0.1)

::-webkit-input-placeholder
  font-style italic

:-moz-placeholder
  color: darkgray!important
  font-style italic

::selection
  background-color $grayLighter

:-moz-selection
  @extend ::selection

body
  color #111
  padding 45px 35px
  font 14px $sansFontFamily
  overflow-x hidden

a
  color $linkColor
  text-decoration none
  transition all .18s ease-in

a:hover
  color #fff
  background-color $linkColor

.wrapper
  max-width 1180px
  margin 0 auto

header
  display block
  margin-bottom 35px
  h1
    font-size 50px
    color #333
  a
    color #111
  a:hover
    color #666
    background none
  .quote
    color #ccc
    font italic 14px Georgia

.main
  margin-right 300px
  padding-right 40px

section
  vertical-align top
  width 100%

aside
section
  display inline-block

aside
  .mod p
    margin-bottom 8px
  &p:last-child
    margin 0

footer
  display block
  margin-top 50px

.post-meta
  display inline-block
  font-style italic
  margin 5px 10px
  transition all .5s ease
  &:hover
    color #111
    background-color #f3f3f3
  &a
    color #777
  &a:hover
    color #fff
    background-color #777
ommen
.copyright
  font-size 12px

article
  display block
  margin-bottom 60px

article h2
  font-size 25px

time
  -webkit-text-size-adjust none
  font-style italic
  font-size 11px
  color #ccc

article
  h3
    font-size 20px
  strong
    line-height 0
  .mod
    margin-bottom 40px
  .content
    display block
    text-align justify
    line-height 1.8
    padding 0 10px
    img
      margin-bottom -10px
      max-width 100%
      height auto
    p
      margin-bottom 15px
  .align-left
    float left
    margin 0 20px 20px 0
  .align-right
    float right
    margin 0 0 20px 20px
  pre
    display inline-block
    font 13px/1.6 $monoFontFamily
    padding 2% 3%
    margin-right 12px
    word-wrap break-word
    vertical-align middle
    max-width 94%
    height auto
  footer
    display inline-block
    margin 20px 0 0 10px
    font-size 12px
    color #333
    max-width 100%
    word-break break-word
    background-color #f7f7f7

article.full footer
  display block
  background none

aside
  margin-left -300px
  width 300px
  .mod
  .grey-mod
    margin-bottom 50px
  .grey-mod
    padding 20px
    background-color #f7f7f7

.mod
  .hd
    margin-bottom 25px
    h3
      font-size 23px
  .bd
    font-size 13px
    padding 0 10px

.admin-area
  background-color #f7f7f7
  padding 10px 15px
  a
    margin-right 10px

.create-form
  margin-left -40px
  padding 30px 0 0
  .fields
    input
    textarea
      font-size $baseFontSize

.photo-preview
  padding-top 20px
  img
    display block
    max-width 260px
    margin-bottom 20px
    cursor pointer

.add-comment
  margin-left 10px
  .editor
    position relative
    max-width 680px
    min-width 517px
    padding 5px
    border 1px solid #ccc
    border-radius 3px

.editbar
  display none
  -webkit-text-size-adjust none
  position relative
  height 13px
  color #999
  font-size 11px
  padding 4px 8px
  margin-bottom 5px
  background $grayLighter

.editbar:after
  content: '\0020';
  display: block;
  clear: both;
  height: 0

.codebar
  float left
  a
    position absolute
    top 0
    left 8px
    padding 4px 6px
    height 13px
    color #fff
    background-color #aaa
  &:hover
    background-color #777

.tips
  float right
  font-style italic

.code-box
  position absolute
  top 26px
  left 13px
  padding 6px
  background-color #aaa

.code-area
  display block
  font 12px/1.4 $monoFontFamily
  margin-bottom 5px
  border none
  border-radius 0

.btn-code
  font-size 11px
  padding 3px 10px

.add-comment
  .item .code-submit
    -webkit-text-size-adjust none
    font-size 9px
    padding 4px 8px
    width auto
  .item-submit
    padding 0

#cmt-box
  font-size 12px
  padding 0
  color #666
  width 100%
  height 150px
  line-height 1.4
  border none

.x
  position absolute
  right 11px
  bottom 9px
  cursor pointer
  color #fff
  &:hover
    text-shadow 0 0 6px #fff

// comments section
#comments .bd
  padding 0

.comments
  margin-left 20px
  li:hover .comment-opt
    display inline
  .item
    position relative
    font-size 13px
    line-height 1.5
    padding 0 40px 0 0
    margin-bottom 25px
  .comment-hd
    line-height 1.3
    margin-bottom 10px
    em
      color #ccc
      font-size 12px
      font-style italic
      margin-right 5px
  .comment-bd
    padding-left 42px
  .comment-opt
    display none
    position absolute
    right 8px
    bottom 0
  .avatar
    float left
    margin-right 10px
    width 32px
    height 32px
    background-color: #f7f7f7

article
  .comments .sh_sourceCode
    font-size 12px
    padding 6px 10px

.terse-list
  li
    margin-bottom 8px
  em
    font-style italic
    margin-left 6px
    color #ccc
  .avatar
  .info
    display inline-block
  .avatar
    vertical-align top
    margin 0 10px 8px 0
    width 32px
    height 32px
    background-color #f7f7f7

// admin
.note-list
  li
    position relative
    padding 8px
  li:hover
    background #f7f7f7
    .opt
      display inline
  .date
    -webkit-text-size-adjust none
    color #ccc
    font-style italic
    font-size 11px
    margin-left 20px
  .opt
    display none
    position absolute
    right 0
    font-size 12px
    a
      margin-right 10px

article .tags
  color: #ccc
  font-size 12px
  font-style italic
  margin-bottom 20px

.tag
  margin-right 3px
  &:last-child
    margin 0

.trackback
  margin-left 8px

// logos
.powered
  float right
  text-align right
  padding-right 30px
  a
    display inline-block
  a:hover
    opacity 0.6
    background-color transparent

.logo-nodejs
  width 67px
  height 18px
  background url(logo-nodejs.png) no-repeat

// login
.form-login
  margin 200px auto
  input
    vertical-align top
    margin-right 10px
    &:last-child
      margin: 0

.owner-avatar
.owner-intro
  display inline-block

.owner-avatar
  margin-right 10px
  vertical-align top
  img
    margin-bottom -3px

.owner-intro
  padding-top 6px
  h4
    margin-bottom 4px
  p
    font-size 12px
    font-style italic
    color #bbb

.atom
.atom:hover
  display inline-block
  height 16px
  line-height @height
  font-size 11px
  padding-left 22px
  background url(icon-atom.png) no-repeat

.atom:hover
  color #666

blockquote
  color #333
  padding 0 28px
  margin 0 15px
  background url(icon-quote.png) no-repeat

.ads a:hover
  background none

@import 'responsive'
